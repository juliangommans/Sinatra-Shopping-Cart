<head>
  <link rel="stylesheet" type="text/css" href="../public/centerss/application.css">
</head>
<table>
	<tr>
		<td>
			<h1> Welcome to the product page</h1>
		<td>
		<td> 
			<% if @session%>
				<form action='/logout' method='post'>
					<input class='logout' type='submit' value='Log Out'>
				</form>
				<form action='/cart' method='get'>
					<input class='cart' type='submit' value='View your cart'>
				</form>
			<% end %> 
		</td>
	<tr>
</table>

<table>
	<tr>
		<td class='items'>
			<h3>Product</h3>
	 	</td>
	 	<td class='items'>
			<h3>Price</h3>
	 	</td class='items'>
	

	</tr>
<% @product_list.each do |item| %>
	<tr>
		<td class='items'><p><a href='/products/<%=item.item_name%>'>  <%="#{item.item_name}: " %></a><p>
		</td>
		<td class='items'><p><%=" $#{item.item_price.to_s} each" %></p>
		</td>
		<td><form action='/cart/<%=item.id%>' method='post'>
			<input type='submit' value='add to cart'>
		</form>
	 	</td>

	</tr>
	<% end %>

</table>

